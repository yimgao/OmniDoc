# =============================================================================
# DOCU-GEN Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# cp .env.example .env

# -----------------------------------------------------------------------------
# Environment Mode
# -----------------------------------------------------------------------------
# Options: dev, prod, test
ENVIRONMENT=dev

# -----------------------------------------------------------------------------
# LLM Provider Configuration
# -----------------------------------------------------------------------------
# Choose your LLM provider: gemini, openai, or ollama
LLM_PROVIDER=ollama

# -----------------------------------------------------------------------------
# Ollama Configuration (for local LLM)
# -----------------------------------------------------------------------------
# Default model to use (e.g., dolphin3, llama2, mistral, etc.)
OLLAMA_DEFAULT_MODEL=dolphin3

# Ollama API base URL
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MAX_TOKENS=8192
# OLLAMA_MAX_TOKENS=16384


# -----------------------------------------------------------------------------
# Gemini Configuration (Google)
# -----------------------------------------------------------------------------
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# -----------------------------------------------------------------------------
# OpenAI Configuration
# -----------------------------------------------------------------------------
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=DEBUG
LOG_FORMAT=text
LOG_DIR=logs

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
DOCS_DIR=docs
RATE_LIMIT_PER_MINUTE=60

