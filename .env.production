DOCS_DIR=docs
MAX_SUMMARY_LENGTH=3000

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
# Production: Use INFO level and JSON format for log aggregation
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_DIR=logs

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# IMPORTANT: Generate a secure key: openssl rand -hex 32
# DO NOT use the default value in production!
JWT_SECRET_KEY=your-secret-key-generate-with-openssl-rand-hex-32
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# OAuth2 Configuration (optional, for user authentication)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret
# GITHUB_CLIENT_ID=your_github_client_id
# GITHUB_CLIENT_SECRET=your_github_client_secret

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=50

# -----------------------------------------------------------------------------
# Performance & Debugging
# -----------------------------------------------------------------------------
# Disable profiling and debug features in production
ENABLE_PROFILING=false
DEBUG_MODE=false
VERBOSE_OUTPUT=false
